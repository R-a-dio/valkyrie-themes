{{define "content"}}
<section class="section" hx-trigger="load delay:30s" hx-get="/admin/queue" hx-target="#content">
    <div class="container">
        <div class="content">
            <div class="fixed-grid has-1-cols">
                <div class="grid">
                    {{range $song := $.Queue}}
                    {{template "song" $song}}
                    {{end}}
                </div>
            </div>
        </div>
    </div>
</section>
{{end}}

{{define "song"}}
<div class="cell">
    <div class="fixed-grid has-12-cols">
        <div class="grid">
            {{if not $.IsUserRequest}}
            <div class="cell has-background-radio-secondary-1 is-col-span-0-mobile is-align-content-center has-text-centered p-2"><time datetime="{{$.ExpectedStartTime.Unix}}">{{Until $.ExpectedStartTime | PrettyDuration}}</time></div>
            <div class="cell is-col-span-8 is-col-span-12-mobile has-background-radio-secondary-1 is-align-content-center has-text-centered p-2">{{$.Metadata}}</div>
            <div class="cell has-background-radio-secondary-1 is-align-content-center has-text-centered">ID: {{$.TrackID}}</div>
            <button class="button cell is-col-span-1 is-danger">Remove</button>
            {{else}}
            <div class="cell has-background-radio-secondary-1 is-align-content-center has-text-centered p-2 is-request"><time datetime="{{$.ExpectedStartTime.Unix}}">{{Until $.ExpectedStartTime | PrettyDuration}}</time></div>
            <div class="cell is-col-span-7 is-col-span-12-mobile has-background-radio-secondary-1 is-align-content-center has-text-centered p-2 is-request" style="color:var(--blue)">{{$.Metadata}}</div>
            <div class="cell has-background-radio-secondary-1 is-align-content-center has-text-centered is-request">/r/ by {{$.UserIdentifier}}</div>
            <div class="cell has-background-radio-secondary-1 is-align-content-center has-text-centered">ID: {{$.TrackID}}</div>
            <button class="button cell is-col-span-1 is-danger">Remove</button>
            {{end}}
        </div>
    </div>
</div>
{{end}}