{{define "content"}}
<section id="pending-section" class="section fixed-grid has-1-cols-mobile has-1-cols-tablet has-1-cols-desktop has-2-cols-widescreen has-2-cols-fullhd">
    <div id="pending-options" class="container fixed-grid has-4-cols mb-0">
        <div class="grid">
            <button class="cell button box is-size-4 js-modal-trigger" data-target="admin-pending-guidelines-modal">Accepting guidelines</button>
            <button class="cell button box is-size-4 js-modal-trigger" data-target="admin-pending-links-modal">Links</button>
            <button class="cell button box is-size-4 js-modal-trigger" data-target="admin-pending-spectrogram-modal">How to read spectrograms</button>
            <button class="cell button box is-size-4 js-modal-trigger" data-target="admin-pending-options-modal">Options</button>
            <div class="cell"></div>
        </div>
    </div>
    <div id="pending" class="grid is-gap-4">
        {{range $song := .Submissions}}
            <div class="cell">
            {{template "form_admin_pending" $song}}
            </div>
        {{end}}
    </div>
</section>
{{template "admin_player" .}}
{{template "pending-guidelines"}}
{{template "pending-links"}}
{{template "pending-spectrogram-guide"}}
{{template "pending-options"}}
{{end}}

{{define "pending-options"}}
<div id="admin-pending-options-modal" class="modal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <div class="content box">
            <div class="title">Options</div>
            <hr>
            <div>Default player volume</div> 
            <div>
                <input id="pending-volume" class="volume-input" name="pending-volume" type="number" min="0" max="100" value="5" oninput="localStorage.setItem('admin-player-volume', this.value)">
            </div>
            <div>Column count</div>
            <div>
                <input id="pending-columns" name="pending-columns" type="number" min="1" max="3" value="1" oninput="localStorage.setItem('admin-pending-columns', this.value)">
            </div>
            <div>Column width</div>
            <div>
                <select id="pending-width" name="pending-width" onchange="localStorage.setItem('admin-pending-width', this.value)">
                    <option value="wide">Wide</option>
                    <option value="narrow">Narrow</option>
                </select>
            </div>
        </div>
    </div>
</div>
{{end}}

{{define "pending-spectrogram-guide"}}
<div id="admin-pending-spectrogram-modal" class="modal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <div class="content box">
            <div class="title">Spectrograms</div>
            <hr>
            <h2>Work in progress</h2>
        </div>
    </div>
</div>
{{end}}

{{define "pending-links"}}
<div id="admin-pending-links-modal" class="modal">
    <div class="modal-background"></div>
    <div class="modal-content">
